<h1>Курсы</h1>

{{#if courses.length}}
    <div class="row">
        {{#each courses}}
            <div class="col s12 m6 l4 xl3"> <!-- Адаптивная колонка: на мобильных устройствах занимает 12 колонок, на планшетах 6, на десктопах 4 и на очень больших экранах 3 -->
                <div class="card">
                    <div class="card-image">
                        <img src="{{img}}" alt="{{title}}">
                    </div>
                    <div class="card-content">
                        <span class="card-title">{{title}}</span>
                        <p class="price">{{price}}</p>
                    </div>
                    <div class="card-action actions">
                        <a href="/courses/{{id}}" target="_blank">Открыть курс</a>
                        {{#if @root.isAuth}}
                            {{#if @root.isAdmin}}
                                <a href="/courses/{{id}}/edit?allow=true">Редактировать</a>
                            {{/if}}
                            <form action="/card/add" method="POST">
                                <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                                <input type="hidden" name="id" value="{{id}}">
                                <button type="submit" class="btn btn-primary">Купить</button>
                            </form>
                        {{/if}}
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <p>Курсов пока нет</p>
{{/if}}
